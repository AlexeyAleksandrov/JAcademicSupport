# Environment variables template for JAcademicSupport
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to Git!

# GigaChat API Configuration
# Get your token from https://developers.sber.ru/studio/workspaces
GIGACHAT_API_TOKEN=your_base64_encoded_token_here
GIGACHAT_MODEL=GigaChat
GIGACHAT_SCOPE=GIGACHAT_API_PERS

# Database Configuration (optional, defaults are in application.properties)
# SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/AcademicSupport
# SPRING_DATASOURCE_USERNAME=postgres
# SPRING_DATASOURCE_PASSWORD=your_password_here

# JWT Configuration
# Secret must be at least 256 bits (32 characters) for HS256 algorithm
JWT_SECRET=MySecretKeyForJWTTokenGenerationThatIsAtLeast256BitsLongForHS256Algorithm
# JWT token expiration time in milliseconds (24 hours = 86400000 ms)
JWT_EXPIRATION=86400000
